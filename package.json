  "devDependencies": {
    "watchify": "~0.6.3",
    "catw": "~0.2.0"
  },
  "scripts": {
    "build-js": "browserify src/index.js -o dist/site.js",
    "build-js-lib": "cat lib/*.js > dist/lib.js",
    "watch-js": "watchify src/index.js -o dist/site.js -dv",
    "watch-js-lib": "catw lib/*.js -o dist/lib.js -v",
